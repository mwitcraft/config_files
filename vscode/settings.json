{
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Spacegray Ocean Dark",
    "editor.minimap.enabled": false,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "workbench.startupEditor": "newUntitledFile",
    "window.zoomLevel": 0,
    "vim.easymotion": true,
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        // EasyMotion
        {
            "before": ["f"],
            "after": ["leader", "leader", "f"]
        },
        {
            "before": ["F"],
            "after": ["leader", "leader", "F"]
        },
        {
            "before": ["leader", "j"],
            "after": ["leader", "leader", "j"]
        },
        {
            "before": ["leader", "k"],
            "after": ["leader", "leader", "k"]
        },
        // EasyMotion
        // VIM remaps
        {
            "before": ["leader", "z"],
            "after": ["z", "z"]
        },
        // Scroll down
        {
            "before": ["J"],
            "after": ["<C-e>"]
        },
        // Scroll up 
        {
            "before": ["K"],
            "after": ["<C-y>"]
        },
        // VSCode commands
        {
            "before": ["leader", "d"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["leader", "/"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["leader", "."],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["leader", "t"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["leader", "enter"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["leader", "r"],
            "commands": ["workbench.action.debug.selectandstart"]
        },
        {
            "before": ["leader", "b"],
            "commands": ["workbench.action.navigateBack"]
        },
        {
            "before": ["leader", "m"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        // VSCode commands
        // Windows
        {
            "before": ["leader", "w", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },
        {
            "before": ["leader", "w", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        // Windows
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // EasyMotion
        {
            "before": ["f"],
            "after": ["leader", "leader", "f"]
        },
        {
            "before": ["F"],
            "after": ["leader", "leader", "F"]
        },
        {
            "before": ["w"],
            "after": ["leader", "leader", "w"]
        },
        {
            "before": ["b"],
            "after": ["leader", "leader", "b"]
        },
        {
            "before": ["leader", "j"],
            "after": ["leader", "leader", "j"]
        },
        {
            "before": ["leader", "k"],
            "after": ["leader", "leader", "k"]
        },
        // EasyMotion
        {
            "before": ["leader", "/"],
            "commands": ["editor.action.commentLine"]
        },
        {
            "before": ["leader", "f"],
            "commands": ["workbench.action.findInFiles"]
        }
    ],
    "workbench.statusBar.visible": true,
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": "file-icons",
    "editor.fontFamily": "FiraCode NF",
    "explorer.confirmDelete": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "explorer.confirmDragAndDrop": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "files.associations": {
        "*.json": "jsonc"
    },
    "editor.fontSize": 12,
    "typescript.suggest.paths": false,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.formatOnType": true,
    "debug.console.wordWrap": false
}
